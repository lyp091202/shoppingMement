@model RunTecMs.Model.ORG.EmployeeModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" content="ie=edge" />
    <meta name="viewport" content="width=device-width" />
    <title>管理后台</title>
    @Styles.Render("~/Content/home.css")
    @Styles.Render("~/Scripts/easyui-1.4.5/themes/icon.css")
    @Styles.Render("~/Scripts/easyui-1.4.5/themes/default/easyui.css")
    @Styles.Render("~/Content/common.css")
    @Scripts.Render("~/easyui/js")
    @Scripts.Render("~/Scripts/core/easyui.extend.js")
    @Scripts.Render("~/Scripts/core/utils.js")
    @Scripts.Render("~/Scripts/menu.js")
    @Scripts.Render("~/Scripts/home.js")
    @Scripts.Render("~/Scripts/jquery.cookie.js")
    @Scripts.Render("~/Scripts/clientTime.js")
</head>
<body class="easyui-layout">
    <!------顶部布局------------>
    <div data-options="region:'north',fit:false,border:false" style="height: 135px; background: #53cbe5;background-image: url(/Images/bg.png)">
        <table class="home-head">
            <tr>
                <td style="width:50px">
                   　　　
                </td>
                <td>
                    <img alt="" src="/Images/zi.png" height="30" />
                </td>
                <td align="right" class="home-handle">
                    <div class="linktop">
                        <p>
                            <a href="javascript:void(0)" id="editpass">修改密码</a> 
                            <a href="javascript:void(0)" id="accountInfo">个人中心</a> 
                            <a href="javascript:void(0)" id="logout">退出</a>
                        </p>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3" class="home-show">
                    <table class="home-bg">
                        <tr>
                            <td class="home-showWidth">
                                <table>
                                    <tr>
                                        <td class="home-text" colspan="2">
                                            &nbsp;用户名：<span class="home-name">@Model.LoginName</span> &nbsp;
                                            &nbsp;日期：<span id="nowTime"></span>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <div id="nav" class="easyui-tabs" data-options="border:false" name="bnm">
            @Html.Action("GetNavList")
        </div>
    </div>
    <!------------顶部布局结束--------------------->
    <!------------左边布局--------------------->
    <div data-options="region:'west',split:true,title:'快捷菜单'" style="width: 150px;">
        <div id="leftNav" class="easyui-accordion" data-options="multiple: true,fit:false,border:false">
        </div>
    </div>
    <!------------左边布局结束--------------------->
    <!------------中间布局--------------------->
    <div data-options="region:'center'">
        <div id="mainPanel" class="easyui-tabs" data-options="fit:true,border:false">
            <div title="工作台" style="padding: 20px; overflow: hidden;" id="home">
                <div style="width: 100%; height: 100%;">
                    @Html.Action("WorkHub", "Home")
                </div>
            </div>
        </div>
    </div>
    <!------------中间布局结束--------------------->
    <!------------底部布局--------------------->
    <div data-options="region:'south',border:false" style="text-align: center; padding: 10px;">
        Copyright(C) 2017-2018 版权所有®翻版必究</div>
    <!------------底部布局--------------------->
    <!---------------修改密码开始--------------->
    <div id="updatePwd" style="width: 500px">
        <iframe id="pwdFrame" style="overflow: hidden;" frameborder="0" width="100%" height="95%"
            scrolling="auto"></iframe>
    </div>
    <!---------------修改密码结束--------------->
    <div id="RelationDiv" style="overflow: hidden; height: 650px; width: 1000px">
        <iframe id="relationFrame" frameborder="0" width="100%" height="100%" scrolling="auto">
        </iframe>
    </div>
</body>
</html>
